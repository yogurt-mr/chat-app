<%# ＜サイドバー＞ %>
<div class="side_bar">
  <div class="side_bar_header">
    <div class="user_name">
      <%= link_to current_user.name, edit_user_path(current_user) %>
    </div>
    <div class="chat_create">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>
  <div class="side_bar_bottom">
    <div class="rooms">
      <% current_user.rooms.each do |room| %>
        <div class="room">
          <div class="room-name">
            <a href="new_room_path"><%= room.name %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>