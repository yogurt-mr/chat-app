<%# ＜チャット画面＞ %>
<div class="chat">
  <div class="chat_header">
    <div class="left-header">
      <div class="header-title">hogefuga</div>
    </div>
    <div class="right-header">
      <div class="header-button">
        <a href="#">チャットを終了する</a>
      </div>
    </div>
  </div>

  <div class="chat_center">
    <div class="messages">
      <div class="upper_message">
        <div class="user_name">Tom</div>
        <div class="date_time">2022/5/25(Wed) 12:43:30</div>
      </div>
      <div class="lower_message">
        <div class="message">おはよう</div>
      </div>
      <div class="messages">
        <div class="upper_message">
          <div class="user_name">Tom</div>
          <div class="date_time">2022/5/25(Wed) 19:43:30</div>
        </div>
        <div class="lower_message">
          <div class="message">こんばんは</div>
        </div>
      </div>
    </div>
  </div>

  <%# <div class="chat_bottom"> %>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
    <%= f.submit '送信', class: 'form_submit' %>
    <% end %>
  </div>
  <%# </div> %>